#form-remote
  =form_for [:admin, @youtube] do |f|
    .modal-header
      =link_to content_tag(:i, '',:class => "fontello-icon-cancel" ),'', :class=> "close close-form", 'aria-hidden' => "true"
      %h4
        =title
    .modal-body
      -if @youtube
        =render 'shared/error_messages', :object => @youtube 
      =render "admin/youtubes/form_fields", :f => f
    .modal-footer
      =f.submit "Save", :class =>'btn btn-primary'