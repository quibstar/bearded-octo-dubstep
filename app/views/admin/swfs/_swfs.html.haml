%div{:id => "swfs"}
  %table{:id => 'sortable-table',:class => "table table-striped table-hover table-bordered boo-table"}
    %caption
      Flash Files
    %thead
      %th
        Actions
      %th{:scope => 'col'}
        Title
        %span.column-sorter
      %th
        Dimensions
      %th
        Destination URL

      
    -@swfs.each_with_index do |swf|
      %tr
        %td
          .btn-group
            =link_to content_tag(:i,'',:class => 'fontello-icon-pencil-1') + ' Edit',edit_admin_swf_path(swf), :class => 'fboxForm fancybox.ajax btn btn-mini btn-yellow'
            =link_to content_tag(:i,'',:class => 'fontello-icon-cloud-flash') + ' Show', admin_swf_path(swf), :class => 'flashBox fancybox.ajax  btn btn-mini btn-green'
            =link_to content_tag(:i,'',:class => 'fontello-icon-trash-4') +' Delete', admin_swf_path(swf),:data => {:confirm => 'Are you sure?'}, :method => :delete, :class => 'btn btn-mini btn-danger'
        %td
          =swf.title
        %td
          =swf.width
          X
          =swf.height
        %td
          =swf.destination_url

