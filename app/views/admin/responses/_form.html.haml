=form_for [:admin, @response], :html => {:id => "edit_response"} do |f|
  .modal-header
    =link_to content_tag(:i, '',:class => "fontello-icon-cancel" ),'', :class=> "close close-form", 'aria-hidden' => "true"
    %h4
      Response
  .modal-body
    -if @response
      =render 'shared/error_messages', :object => @response 
    =render "admin/responses/form_fields", :f => f
  .modal-footer
    =f.submit "Save", :class =>'btn btn-primary'