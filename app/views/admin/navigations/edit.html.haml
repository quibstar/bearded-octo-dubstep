#form-remote
  =form_for [:admin, @navigation], :html => {:id => "edit_navigation"} do |f|
    -if(params[:showing])
      =hidden_field_tag :redirect, "sections"
    .modal-header
      =link_to content_tag(:i, '',:class => "fontello-icon-cancel" ),'', :class=> "close close-form", 'aria-hidden' => "true"
      %h4
        =@navigation.nav_group
    .modal-body
      -if @navigation
        =render 'shared/error_messages', :object => @navigation 
      =render "admin/navigations/form_fields", :f => f
    .modal-footer
      =f.submit "Save", :class =>'btn btn-primary'