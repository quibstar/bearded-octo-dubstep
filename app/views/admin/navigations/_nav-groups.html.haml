%div{:id => "nav-groups"}
  %table{:id => 'sortable-table',:class => "table table-striped table-hover table-bordered"}
    %caption
      Navigation Groups
    %thead
      %th
        Actions
      %th{:scope => 'col'}
        Title
        %span.column-sorter
      
    -@navigations.each_with_index do |navigation, i|
      %tr
        %td
          .btn-group
            =link_to content_tag(:span, '', :class => 'caret') + " Action", '#',:class => "btn dropdown-toggle btn-yellow", 'data-toggle' => "dropdown"
            %ul.dropdown-menu
              %li
                =link_to content_tag(:i,'',:class => 'fontello-icon-pencil-1') + ' Edit navigation settings',edit_navigation_path(navigation), :class => 'fboxForm fancybox.ajax'
              %li.divider
              %li
                =link_to content_tag(:i,'',:class => 'fontello-icon-trash-4') +' Delete', navigation_path(navigation),:data => {:confirm => 'Are you sure?'}, :method => :delete
        %td
          =navigation.nav_group