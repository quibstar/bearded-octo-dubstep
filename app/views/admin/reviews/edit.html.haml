#form-remote
  =form_for [:admin, @review] , :html => {:id => "edit_review"} do |f|
    .modal-header
      =link_to content_tag(:i, '',:class => "fontello-icon-cancel" ),'', :class=> "close close-form", 'aria-hidden' => "true"
      %h4
        Edit Review Link for
        =@client.name
    .modal-body
      -if @review
        =render 'shared/error_messages', :object => @review 
      =render "admin/reviews/form_fields", :f => f
    .modal-footer
      =f.submit "Save", :class =>'btn btn-primary'