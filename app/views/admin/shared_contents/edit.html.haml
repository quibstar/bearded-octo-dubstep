#form-remote
  =form_for [:admin, @shared_content], :html => {:id => "shared_content"} do |f|
    -if(params[:sections])
      =hidden_field_tag :redirect, "sections"
    .modal-header
      =link_to content_tag(:i, '',:class => "fontello-icon-cancel" ),'', :class=> "close close-form", 'aria-hidden' => "true"
      %h4
        =@shared_content.title
    .modal-body
      -if @shared_content
        =render 'shared/error_messages', :object => @shared_content 
      =render "admin/shared_contents/form_fields", :f => f
    .modal-footer
      =f.submit "Save", :class =>'btn btn-primary'