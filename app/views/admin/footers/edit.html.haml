#form-remote
  =form_for [:admin, @footer], :html => {:id => "edit_footer"} do |f|
    -if(params[:sections])
      =hidden_field_tag :redirect, "sections"
    .modal-header
      =link_to content_tag(:i, '',:class => "fontello-icon-cancel" ),'', :class=> "close close-form", 'aria-hidden' => "true"
      %h4
        =@footer.title
    .modal-body
      -if @footer
        =render 'shared/error_messages', :object => @footer 
      =render "admin/footers/form_fields", :f => f
    .modal-footer
      =f.submit "Save", :class =>'btn btn-primary'
