%div{:id => "footers"}
  %table{:id => 'sortable-table',:class => "table table-striped table-hover table-bordered boo-table"}
    %caption
      Footers
    %thead
      %th
        Actions
      %th{:scope => 'col'}
        Title
        %span.column-sorter
      
    -@footers.each_with_index do |foot, i|
      %tr
        %td
          .btn-group
            =link_to content_tag(:span, '', :class => 'caret') + " Action", '#',:class => "btn dropdown-toggle btn-yellow", 'data-toggle' => "dropdown"
            %ul.dropdown-menu
              %li
                =link_to content_tag(:i,'',:class => 'fontello-icon-article') + " Edit footer content",admin_footer_sections_path(foot)
              %li
                =link_to content_tag(:i,'',:class => 'fontello-icon-pencil-1') + ' Edit footer title',edit_admin_footer_path(foot), :class => 'fboxForm fancybox.ajax'
              %li.divider
              %li
                =link_to content_tag(:i,'',:class => 'fontello-icon-trash-4') +' Delete', admin_footer_path(foot),:data => {:data => {:confirm => 'Are you sure?'}}, :method => :delete
        %td
          =foot.title