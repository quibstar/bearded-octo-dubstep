#form-remote
  =form_for [:admin, @testimonial] do |f|
    .modal-header
      =link_to content_tag(:i, '',:class => "fontello-icon-cancel" ),'', :class=> "close close-form", 'aria-hidden' => "true"
      %h4
        New testimonial
    .modal-body
      -if @testimonial
        =render 'shared/error_messages', :object => @testimonial 
      =render "admin/testimonials/form_fields", :f => f
    .modal-footer
      =f.submit "Save", :class =>'btn btn-primary'