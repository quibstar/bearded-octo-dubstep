%div{:id => 'testimonials'}
	%table{:id => 'sortable-table',:class => "table table-striped table-hover table-bordered boo-table"}
		%caption
			Testimonal
		%thead
			%th
				Action
			%th{:scope => 'col'}
				Title
				%span.column-sorter
			%th{:scope => 'col'}
				Author
				%span.column-sorter
			%th{:scope => 'col'}
				Position
				%span.column-sorter
			%th{:scope => 'col'}
				Company
				%span.column-sorter
			%th
				Testimonial	
		-@testimonials.each do |t|
			%tr
				%td
					.btn-group
						=link_to content_tag(:i,'',:class => 'fontello-icon-pencil-1') +' Edit', edit_admin_testimonial_path(t), :class => 'fboxForm fancybox.ajax btn btn-mini btn-yellow'
						=link_to content_tag(:i,'',:class => 'fontello-icon-trash-4') +' Delete', admin_testimonial_path(t), :comfirm => "Are you sure?", :method => :delete, :class => 'btn btn-mini btn-danger'
				%td
					=t.title
				%td
					=t.author
				%td
					=t.position
				%td
					=t.company
				%td
					=t.testimonial.html_safe