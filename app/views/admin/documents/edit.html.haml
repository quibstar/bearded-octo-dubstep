=javascript_include_tag 'admin/modal_links.js'

#form-remote
  =form_for [:admin, @document], :html => {:multipart => true, :id => "edit_document"} do |f|
    .modal-header
      =link_to content_tag(:i, '',:class => "fontello-icon-cancel" ),'', :class=> "close close-form", 'aria-hidden' => "true"
      %h4
        Edit
        =@document.title
    .modal-body
      =hidden_field_tag "document[image_id]",@document.document_image.image_id
      -if @document
        =render 'shared/error_messages', :object => @document
      =render "admin/documents/form_fields", :f => f
    .modal-footer
      =f.submit "Save", :class =>'btn btn-primary'