%table{:id => 'sortable-table',:class => "table table-striped table-hover table-bordered boo-table"}
  %caption
    Audios
  %thead
    %th
      Actions
    %th{:scope => 'col'}
      Artist
      %span.column-sorter
    %th{:scope => 'col'}
      Title
      %span.column-sorter
    %th
      Description
    %th{:scope => 'col'}
      categories
      %span.column-sorter
      
  -@audios.each do |audio|
    %tr
      %td
        .btn-group
          =link_to content_tag(:span, '', :class => 'caret') + " Action", '#',:class => "btn dropdown-toggle btn-yellow", 'data-toggle' => "dropdown"
          %ul.dropdown-menu
            %li
              =link_to content_tag(:i,'',:class => 'fontello-icon-pencil-1') + ' Edit Audio', edit_admin_audio_path(audio), :class => 'fboxForm fancybox.ajax'
            %li.divider
            %li
              =link_to content_tag(:i,'',:class => 'fontello-icon-trash-4') + ' Delete Audio', admin_audio_path(audio),:data => {:data => {:confirm => 'Are you sure?'}}, :method => :delete
            %li.divider
            %li
              =link_to content_tag(:i,'',:class => 'fontello-icon-download') + ' Download', audio.audio.to_s,:target => "_blank"
      %td
        =audio.artist
      %td
        =audio.title

      %td
        =audio.description
      %td
        =audio.categories.collect{|c| c.name}.join(', ')