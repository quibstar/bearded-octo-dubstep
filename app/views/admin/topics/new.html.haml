=form_for [:admin, @topic] do |f|
  .modal-header
    =link_to content_tag(:i, '',:class => "fontello-icon-cancel" ),'', :class=> "close close-form", 'aria-hidden' => "true"
    %h4
      New Group
  .modal-body
    -if @topic
      =render 'shared/error_messages', :object => @topic 
    =render "admin/topics/form_fields", :f => f
  .modal-footer.submit-group
    =f.submit "Save", :class =>'btn btn-primary'