.copy-content
  =simple_format copy.content
  %strong
    Editor:
  =copy.editor
  %br/
  %strong
    Date:
  = copy.created_at.strftime("%b %d, %I:%M %P")
  .clear-both
  .btn-group
    =link_to content_tag(:i,'',:class => 'fontello-icon-edit') + " Edit Copy", edit_admin_topic_group_copy_path(@topic, group, copy), :class => "btn btn-sky btn-mini edit-copy fboxForm fancybox.ajax", :data => {:textarea => "copy_content", :network => "#{group.network}"}

    =link_to content_tag(:i,'',:class => 'fontello-icon-trash-4') +' Delete', admin_topic_group_copy_path(@topic,group, copy), :comfirm => "Are you sure?", :method => :delete, :class => "btn btn-mini btn-danger"
  =render partial: "admin/topics/selected_form", locals: {copy: copy}