=content_for :page_title do
  %h1.page-title
    %i.fontello-icon-th-3
    Collections 
    %small
      (Gallerires &amp; Playlists)
.navbar.navbar-page
  .navbar-inner
    .container
      %ul.nav
        %li
          .btn-group
            =link_to content_tag(:span, '', :class => 'caret') + " Action", '#',:class => "btn dropdown-toggle ", 'data-toggle' => "dropdown"
            %ul.dropdown-menu
              %li
                =link_to content_tag(:i,'',:class => 'fontello-icon-picture') + ' New Image Gallery',new_admin_collection_path(:asset => 'ic') , :class => ''
              %li
                =link_to content_tag(:i,'',:class => 'fontello-icon-doc') + ' New Document Gallery',new_admin_collection_path(:asset => 'dc') , :class => ''
              %li
                =link_to content_tag(:i,'',:class => 'fontello-icon-music') + ' New Audio Playlist',new_admin_collection_path(:asset => 'ac') , :class => ''
              %li
                =link_to content_tag(:i,'',:class => 'fontello-icon-youtube') + ' New Video Playlist',new_admin_collection_path(:asset => 'vc') , :class => ''
              %li
                =link_to content_tag(:i,'',:class => 'fontello-icon-user') + ' New User Gallery',new_admin_collection_path(:asset => 'uc') , :class => ''
        %li.divider-vertical
        

=render 'collections'
  