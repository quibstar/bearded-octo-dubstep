%li.section-form
  %h4
    Choose a Publication.
    
%li.control-group
  %label.control-label
    Post per page
  .controls
    =f.text_field :post_per_page

%li.control-group    
  -for pub in Publication.all
    %label.radio.inline
      =radio_button_tag "section[publication_ids][]",pub.id, @section.publications.include?(pub), :id => pub.id
      =pub.title
      \- post count:
      =pub.posts.count