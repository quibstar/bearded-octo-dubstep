%div{:id => "images"}
  %table{:id => 'sortable-table',:class => "table table-striped table-hover table-bordered boo-table"}
    %caption
      Images
    %thead
      %th
        Actions
      %th{:scope => 'col'}
        Title
        %span.column-sorter
      %th
        Image 
        %small
          Thumbnail
      %th{:scope => 'col'}
        Categories
        %span.column-sorter
      
    -@images.each_with_index do |image, i|
      %tr
        %td
          .btn-group
            =link_to content_tag(:i,'',:class => 'fontello-icon-pencil-1') + ' Edit',edit_admin_image_path(image), :class => 'fboxForm fancybox.ajax btn btn-mini btn-yellow'
            =link_to content_tag(:i,'',:class => 'fontello-icon-trash-4') +' Delete', admin_image_path(image),:data => {:confirm => 'Are you sure?'}, :method => :delete, :class => 'btn btn-mini btn-danger'
        %td
          =image.title
        %td
          =image_tag(image.image_url(:thumb))
        %td
          =image.categories.collect{|c| c.name}.join(', ')