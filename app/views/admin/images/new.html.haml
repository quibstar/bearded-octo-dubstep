#form-remote
  =form_for [:admin, @image] do |f|
    .modal-header
      =link_to content_tag(:i, '',:class => "fontello-icon-cancel" ),'', :class=> "close close-form", 'aria-hidden' => "true"
      %h4
        New Image
    .modal-body
      -if @image
        =render 'shared/error_messages', :object => @image 
      =render "admin/images/form_fields", :f => f
    .modal-footer
      =f.submit "Save", :class =>'btn btn-primary'