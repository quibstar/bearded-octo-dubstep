= content_for :page_title do
  %h1
    Content

%div{:id => "versions"}
  %table{:class => "table table-striped table-hover table-bordered boo-table"}
    %caption
      Content Version
    %thead
      %th
        Attribute
      %th
        Current Version
      %th
        Previous Version
        =link_to "Restore", undo_path(:undo => @record.item_type,:vid => @record.id),:class => 'btn btn-envato btn-mini'
    %tr
      %td
        Content
        =compare_properties(@version.content , @version.previous_version.content)
      %td
        =@version.content.html_safe
      %td
        =@version.previous_version.content.html_safe
