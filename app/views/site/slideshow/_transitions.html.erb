<%# h3 %>
<% if slide.header_slide_direction == 'top' %>
	children.filter('h3').css({'top': '-100', 'left': <%=slide.header_left.to_i%>});
	children.filter('h3').animate({ <%=slide.header_slide_direction%>: <%=slide.header_top.to_i%>, opacity: 'toggle'}, 600);
<% end %>

<% if slide.header_slide_direction == 'right' %>
	children.filter('h3').css({'top':<%=slide.header_top.to_i%>,'left':300});
	children.filter('h3').animate({ left: <%=slide.header_left.to_i%>, opacity: 'toggle'}, 600);
<% end %>

<% if slide.header_slide_direction == 'bottom' %>
	children.filter('h3').css({'top':500, 'left': <%=slide.content_left.to_i%>});
	children.filter('h3').animate({ top: <%=slide.header_top.to_i%>, opacity: 'toggle'}, 600);
<% end %>

<% if slide.header_slide_direction == 'left' %>
	children.filter('h3').css({'top':<%=slide.header_top.to_i%>,'left':-300});
	children.filter('h3').animate({ left: <%=slide.header_left.to_i%>, opacity: 'toggle'}, 600);
<% end %>

<% if slide.header_slide_direction == 'none' %>
	children.filter('h3').css({'top':<%=slide.header_top.to_i%>,'left': <%=slide.header_left.to_i%>});
	children.filter('h3').animate({ opacity: 'toggle'}, 600);
<% end %>



